vcl 4.1;

import directors;
import std;

{{#each backend as |b| }}
backend {{ b.name }} {
  .host = "{{ b.host }}";
  .port = "{{ b.port }}";
}
  
{{/each}}

sub vcl_recv {
{{#each backend as |b| }}
 if (req.http.host == "{{ b.host}}") {
        set req.backend_hint = {{ b.name }};
    }
{{/each}}
}
